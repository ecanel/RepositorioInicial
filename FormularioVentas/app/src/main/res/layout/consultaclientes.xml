<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:paddingLeft="8dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:id="@+id/mostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/ivCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvNit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tvCliente"
            app:srcCompat="@drawable/usuario" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Cliente"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            tools:text="Editar Cliente" />

        <TextView
            android:id="@+id/tvCliente"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:hint="Nombre"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textIsSelectable="false"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvCliente"
            android:layout_alignStart="@+id/tvCliente"
            android:layout_below="@+id/tvCliente"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:hint="Direccion"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvDireccion"
            android:layout_alignStart="@+id/tvDireccion"
            android:layout_below="@+id/tvDireccion"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:hint="Nit"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
